<h2 class="font-bold">Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :name, class:"font-bold" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "create-user-form-input" %>
  </div>

  <div>
    <%= f.label :email, class:"font-bold" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "create-user-form-input" %>
  </div>

  <!-- Añadir todos los demás campos -->
  <div>
    <%= f.label :address, class:"font-bold" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "create-user-form-input" %>
  </div>

  <div>
    <%= f.label :country, class:"font-bold" %><br />
    <%= f.text_field :country, autofocus: true, autocomplete: "country", class: "create-user-form-input" %>
  </div>

  <div>
    <%= f.label :phonenumber, class:"font-bold" %><br />
    <%= f.text_field :phonenumber, autofocus: true, autocomplete: "phonenumber", class: "create-user-form-input" %>
  </div>

  <div>
    <%= f.label :postcode, class:"font-bold" %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", class: "create-user-form-input" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class:"font-bold" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "create-user-form-input" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "font-bold" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "create-user-form-input" %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "font-bold" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "create-user-form-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "create-user-form-submit" %>
  </div>
<% end %>

<h3 class="font-bold"><i>Cancel my account</i></h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "create-user-form-submit"%></p>

<a href="/auth/logout.html">Logout</a>
<%= link_to "Back", :back, class: "create-user-form-submit" %>


